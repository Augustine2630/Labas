<resources>
    <style
        name="AppTheme"
        parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryDark">@color/purple_200</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:windowBackground">@color/design_default_color_background</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style
        name="SpecialText"
        parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#548f00</item>
        <item name="android:background">#b7e4fb</item>
    </style>
</resources>